@model HighSchool.OAuth.Models.Message
<!DOCTYPE html>
<html>
<head>
    <title>Please Accept Terms</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
    <link href="~/Css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="terms-container">
        <h1>Please Accept the Terms and Conditions</h1>
        @using (Html.BeginForm("Index", "Terms", FormMethod.Post))
        {
            @Html.CheckBox("acceptTerms")
            <label>I accept the Terms and Conditions</label>
            <p class="errorMessage">@if (@Model != null) { @Model.message }</p>
            <div>
                <input type="submit" class="submit" value="ACCEPT" />
            </div>
        }
    </div>
</body>
</html>