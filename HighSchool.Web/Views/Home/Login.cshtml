@model HighSchool.Web.ViewModels.UserForViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Login</title>
</head>
<body>
    <div class="container-fluid text-center header">
        <h6>
           @{string value = string.IsNullOrEmpty(Model.ErrorMessage) ? "Login" : @Model.ErrorMessage; }
            @value
        </h6>
    </div>

    <div class="container form-container">

        <div class="login-form text-center">
            <h1>HighSchool</h1>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <div class="form-group login-form">

                    @Html.AntiForgeryToken()

                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Username, new { @id = "txtUsername", @class = "form-control", @placeholder = "Username or email" })
                    </div>

                    <div class="input-group">
                        @Html.PasswordFor(m => m.Password, new { @id = "txtPassword", @class = "form-control", @placeholder = "Password" })
                    </div>
                    <div class="input-group">
                        <input type="submit" id="btnSingin" class="btn btn-default btn-lg" value="Sing in">
                    </div>
                </div>
            }
            <h6>
                <strong>
                    Copyright (C) 2018-2018 High School All rights reserved
                </strong>
            </h6>
        </div>
    </div>

    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")
</body>
</html>



